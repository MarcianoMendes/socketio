<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Socket.io</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <style>
    #chat {
      max-height: 480px;
      min-height: 480px;
      background-color: rgb(224, 224, 227);
      overflow-y: scroll;
      margin-left: 10px;
    }
  </style>
  <body>
    <h1>Chat</h1>
    <div id="chat"></div>
    <br />
    <div class="d-grid gap-2">
      <input type="text" id="message" class="form-control" /><br />
      <input
        type="text"
        id="username"
        placeholder="Nome do UsuÃ¡rio"
        class="form-control"
      /><br />
      <button class="btn btn-primary" onclick="send()">Enviar</button>
    </div>
  </body>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.4.1/socket.io.js"></script>
  <script>
    var socket = io("http://localhost:3000");

    socket.on("disconnect", () => {
      console.log("Desconectado");
    });

    socket.on("showmessage", (data) => {
      console.log(data);
      var chat = document.getElementById("chat");
      var paragraph = document.createElement("p");
      var date = new Date();
      paragraph.innerHTML =
        date.getHours() +
        ":" +
        date.getMinutes() +
        ":" +
        date.getSeconds() +
        " - " +
        data.userName +
        ": " +
        data.message;
      chat.append(paragraph);
    });

    function send() {
      var messageField = document.getElementById("message");
      var userNameField = document.getElementById("username");
      var message = messageField.value;
      var userName = userNameField.value;
      socket.emit("message", { message: message, userName: userName });
    }
  </script>
</html>
